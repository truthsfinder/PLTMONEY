<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            tools:ignore="MissingConstraints">

            <TableLayout
                android:id="@+id/loantbl_header"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_above="@+id/scrollView3"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="120dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:text="NAME" />

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:text="BORROWED" />

                    <TextView
                        android:id="@+id/textDue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:text="DUE DATE" />

                    <TextView
                        android:id="@+id/textAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:text="AMOUNT" />
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="173dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="LOAN"
                android:textSize="40dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="16dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/loantbl_header"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="gone"
                app:layout_anchorGravity="center_vertical|center_horizontal" />


            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="383dp"
                android:layout_height="294dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="65dp"
                android:overScrollMode="never"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="141dp">

                <TableLayout
                    android:id="@+id/loan_tbl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                </TableLayout>
            </ScrollView>

            <Button
                android:id="@+id/createBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/loantbl_header"
                android:layout_weight="1"
                android:text="ADD"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="447dp" />

            <ListView
                android:id="@+id/loan_listview"
                android:layout_width="match_parent"
                android:layout_height="357dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/loantbl_header" />


        </RelativeLayout>
</android.support.constraint.ConstraintLayout>