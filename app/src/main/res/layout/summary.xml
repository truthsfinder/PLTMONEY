<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="320dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-condensed"
            android:text="SUMMARY OF EXPENSES"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/txtTotalAmount"
            android:text="TOTAL:"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="476dp" />

        <TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="134dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="458dp" />

        <ScrollView
            android:id="@+id/scrollView6"
            android:layout_width="383dp"
            android:layout_height="319dp"
            android:layout_above="@+id/txtTotalAmount"
            android:layout_alignParentStart="true"
            android:overScrollMode="never"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="141dp">

            <TableLayout
                android:id="@+id/summary_tbl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:shrinkColumns="*"
                android:stretchColumns="*">

            </TableLayout>


        </ScrollView>
        <TableLayout
            android:id="@+id/summarytbl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_above="@+id/scrollView6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="120dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="ITEM" />

                <TextView
                    android:id="@+id/textCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="CATEGORY" />

                <TextView
                    android:id="@+id/textAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="AMOUNT" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>